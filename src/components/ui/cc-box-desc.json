{
  "collectionName": "components_ui_cc_box_descs",
  "info": {
    "displayName": "CC Box Desc"
  },
  "options": {},
  "attributes": {
    "description": {
      "type": "text"
    },
    "content": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "backgroundColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "buttonIconPlacement": {
      "type": "enumeration",
      "enum": [
        "left",
        "right"
      ],
      "required": true,
      "default": "left"
    },
    "buttonTextColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color",
      "required": true
    },
    "buttonPlacement": {
      "type": "enumeration",
      "enum": [
        "top-left",
        "top-right",
        "bottom-left",
        "bottom-right"
      ],
      "default": "bottom-left",
      "required": true
    },
    "buttonIcon": {
      "type": "component",
      "repeatable": false,
      "component": "ui.icon",
      "required": true
    }
  }
}
